<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/registration.css">
        <link rel="icon" href="/img/Безымянный.png">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
        <script src="/js/google-translate.js"></script>
        <script src="//translate.google.com/translate_a/element.js?cb=TranslateInit"></script>
        <title>Sign Up</title>
    </head>
    <body>
        <div class="container">
            <div class="language">
                <img src="/img/lng/lang__en.png" alt="en" data-google-lang="en" class="language__img">
                <img src="/img/lng/lang__ru.png" alt="ru" data-google-lang="ru" class="language__img">
            </div>
            <div class="header">
                <h2>Create account</h2>
            </div>
            <div class="middle-container">
                <form class="register" action="/users/registration" method="POST">
                    <div class="form-control">
                        <label>First Name</label>
                        <input id="first_name" class="enter" type="text" name="first_name" required placeholder="Enter Your name">
                    </div>

                    <div class="form-control">
                        <label>Last Name</label>
                        <input id="second_name" class="enter" type="text" name="second_name" required placeholder="Enter Your surname">
                    </div>

                    <div class="form-control">
                        <label>Date of Birth</label>
                        <input id="date_of_birth" type="date" name="date_of_birth" required placeholder="Enter Your Birthday">
                    </div>

                    <div class="form-control">
                        <label>Address</label>
                        <input id="address" class="enter" type="text" name="address" required placeholder="Enter Your address">
                    </div>

                    <div class="form-control">
                        <label>Phone Number</label>
                        <input id="phone_number" class="enter" type="tel" name="phone_number" required placeholder="Enter Your phone number">
                    </div>

                    <div class="form-control">
                        <label>E-mail</label>
                        <input class="enter" type="email" name="email" required placeholder="Enter Your e-mail">
                    </div>

                    <div class="form-control">
                        <label>Password</label>
                        <input class="enter" id="password" name="password" type="password" required>
                    </div>

                    <div class="form-control">
                        <label>Password Confirmation</label>
                        <input class="enter" id="confirmPassword" name="confirmPassword" type="password" required>
                    </div>

                    <div class="form-control">
                        <label>Role</label><br>
                        <select name="role">
                            <option value="1" selected>Choose your Role</option>
                            <option value="Car Owner">Car Owner</option>
                            <option value="Car Renter">Car Renter</option>
                        </select>
                    </div>
                    <ul>
                        <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                            <li><%= error.message %></li>
                        <% }) %> <% } %>
                    </ul>
                    <input type="submit" value="Register" />
                </form>
            </div>
        </div>
    </body>
</html>
