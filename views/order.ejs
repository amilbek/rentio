<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/registration.css">
        <link rel="icon" href="/img/Безымянный.png">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
        <script src="/js/google-translate.js"></script>
        <script src="//translate.google.com/translate_a/element.js?cb=TranslateInit"></script>
        <title>Order</title>
    </head>
    <body>
    <div class="container">
        <div class="language">
            <img src="/img/lng/lang__en.png" alt="en" data-google-lang="en" class="language__img">
            <img src="/img/lng/lang__ru.png" alt="ru" data-google-lang="ru" class="language__img">
        </div>
        <div class="header">
            <h2>Order</h2>
        </div>
        <div class="middle-container">
            <form action="/users/renter/<%= data.id %>/order" method="POST">
                <div class="form-control">
                    <label>Start Date</label>
                    <input class="enter" type="date" name="start_date" required placeholder="Enter Start Date">
                </div>

                <div class="form-control">
                    <label>End Date</label>
                    <input class="enter" type="date" name="end_date" required placeholder="Enter End Date">
                </div>

                <div class="form-control">
                    <label>Start Location</label>
                    <input class="enter" type="text" name="start_location" required placeholder="Enter Start Location">
                </div>

                <div class="form-control">
                    <label>End Location</label>
                    <input class="enter" type="text" name="end_location" required placeholder="Enter End Location">
                </div>

                <div class="form-control">
                    <label>Card Type</label>
                    <input class="enter" type="text" name="card_type" required placeholder="Enter Card Type">
                </div>

                <div class="form-control">
                    <label>Name on Card</label>
                    <input class="enter" type="text" name="name_on_card" required placeholder="Enter Name on Card">
                </div>

                <div class="form-control">
                    <label>Card Number</label>
                    <input class="enter" type="text" name="card_number" required placeholder="Enter Card Number">
                </div>

                <div class="form-control">
                    <label>Expiration Date</label>
                    <input class="enter" type="month" name="exp_date" required placeholder="Enter Expiration Date of Card">
                </div>

                <div class="form-control">
                    <label>CVV/CVC</label>
                    <input class="enter" name="cvv_cvc" type="password" required>
                </div>

                <div class="form-control">
                    <label>Car Renter ID</label>
                    <input class="enter" name="car_renter_id" type="text" required placeholder="Enter Your ID">
                </div>

                <div class="form-control">
                    <label>Car ID</label>
                    <input class="enter" name="car_id" type="text" required placeholder="Enter Car ID">
                </div>

                <ul>
                    <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                        <li><%= error.message %></li>
                    <% }) %> <% } %>
                </ul>
                <button class="btn btn-warning" type="submit">Order</button>
            </form>
        </div>
    </div>
    </body>
</html>
